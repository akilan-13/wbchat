function eefc_validation(){
	var err=0;	
	var eefc_bank_id=$('#eefc_bank_details_id').val();
	var eefc_currency_id=$('#currency_id_eefc').val();
	var eefc_amount=$('#eefc_amount_usd').val();

	$('#final_eefc_currency_id').val(eefc_currency_id);
	$('#final_eefc_bank_id').val(eefc_bank_id);
	if (eefc_bank_id == '') {
        $('#eefc_bank_id_err').html('Bank name is required!');
        err++;

    } else {
        $('#eefc_bank_id_err').html('');
    }
	if (eefc_currency_id == '') {
        $('#eefc_currency_err').html('Currency is required!');
        err++;

    } else {
        $('#eefc_currency_err').html('');
    }
	if (eefc_amount == '' || eefc_amount == 0) {
            $('#eefc_amount_usd_err').html('Amount is Required!');
            err++;

        } else {
            $('#eefc_amount_usd_err').html('');
        }

	if(err>0){
		
	}else{
		$('#add_more_eefc_details').modal('hide'); 
		return true;
	}
	

}

function rmv_more_fc_details_popup(lid) {
    // alert(lid);
    $('#forward_contract_' + lid).remove();
}



