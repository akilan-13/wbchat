<script>
function fw_cont_lst() {
    var forward_contract_list = document.getElementById("forward_contract_list");
    var forward_contract_box = document.getElementById("forward_contract_box");
    if (forward_contract_list.checked) {
        // forward_contract_box.style.display="block";
        $('#add_more_fc_details').modal('show');
    } else {

        var modal = document.getElementById('add_more_fc_details');

        var modalContent = modal.querySelector('.modal-content');

        var fc_count = document.getElementById('fc_details_append_block_count').value;

        for (var i = 1; i <= fc_count; i++) {
            modalContent.querySelector('#fc_id_' + i).selected = false;
            modalContent.querySelector('#fc_balance_' + i).innerHTML = 0;
            modalContent.querySelector('#fc_rate_lbl_' + i).innerHTML = 0;
            modalContent.querySelector('#fc_amount_usd_' + i).value = 0;
            modalContent.querySelector('#fc_rate_' + i).value = 0;
            modalContent.querySelector('#fc_amount_inr_' + i).value = 0;

            if (i > 1) {
                $('#forward_contract_' + i).remove();
            }
        }
    }
}
</script>
<script>
function pcfc_lst() {
    var pcfc_list = document.getElementById("pcfc_list");
    var pcfc_box = document.getElementById("pcfc_box");
    if (pcfc_list.checked) {
        // pcfc_box.style.display="block";
        $('#add_more_pcfc_details').modal('show');
    } else {
        // pcfc_box.style.display="none";
        var pcfc_modal = document.getElementById('add_more_pcfc_details');

        var pcfc_modalContent = pcfc_modal.querySelector('.modal-content');

        var pcfc_count = document.getElementById('pcfc_details_append_block_count').value;

        for (var j = 1; j <= pcfc_count; j++) {
            // ALERT(J)
            pcfc_modalContent.querySelector('#pcfc_id_' + j).selected = false;

            pcfc_modalContent.querySelector('#pcfc_balance_' + j).innerHTML = 0;
            pcfc_modalContent.querySelector('#pcfc_rate_lbl_' + j).innerHTML = 0;
            pcfc_modalContent.querySelector('#pcfc_amount_usd_' + j).value = 0;
            pcfc_modalContent.querySelector('#pcfc_rate_' + j).value = 0;
            pcfc_modalContent.querySelector('#pcfc_amount_inr_' + j).value = 0;

            if (j > 1) {
                $('#pcfc_' + j).remove();
            }
        }
    }
}
</script>
