function get_pcfc_details_popup(pcfc_id, id) {
    // var pcfc_id=$('#pcfc_id').val();
    $.ajax({
        type: "POST",
        url: baseurl + 'VoucherAccounts/get_pcfc_details',
        async: false,
        data: "pcfc_id=" + pcfc_id,
        dataType: "json",
        success: function(response) {
            $('#final_pcfc_id_' + id).val(pcfc_id);
            $('#pcfccurrency_symbol_' + id).html(response.currency_code);
            $('#pcfccurrency_lbl_symbol_' + id).html(response.currency_code);
            $('#pcfccurrency_amt_symbol_' + id).html(response.currency_code);
            $('#pcfccurrency_rt_symbol_' + id).html(response.currency_code);

            $('#pcfc_rate_lbl_' + id).html(response.rate_per_usd);
            $('#pcfc_rate_' + id).val(response.rate_per_usd);
            $('#pcfc_balance_' + id).html(response.balance_amount > 0 ? response.balance_amount : "")
                .toFixed(2);

        }
    });
}

function get_eefc_details_popup(eefc_id, id) {
    // var pcfc_id=$('#pcfc_id').val();
    $.ajax({
        type: "POST",
        url: baseurl + 'VoucherAccounts/get_eefc_details',
        async: false,
        data: "eefc_id=" + eefc_id,
        dataType: "json",
        success: function(response) {
			// console.log(response)
            $('#final_eefc_id_' + id).val(eefc_id);
            $('#eefccurrency_symbol_' + id).html(response.currency_code);
            $('#eefccurrency_lbl_symbol_' + id).html(response.currency_code);
            $('#eefccurrency_amt_symbol_' + id).html(response.currency_code);
            $('#efccurrency_rt_symbol_' + id).html(response.currency_code);

            // $('#eefc_rate_lbl_' + id).html(response.rate);
			$('#eefc_balance_' + id).html(response.amount > 0 ? response.amount : "");

        }
    });
}

