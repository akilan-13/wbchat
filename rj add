    //         interest_int_loan_box.style.display = "none";
    //         interest_int_loan_amt_box.style.display = "none";
    //     } else {
    //         interest_pcfc_box.style.display = "none";
    //         interest_pcfc_amt_box.style.display = "none";
    //         interest_int_loan_box.style.display = "none";
