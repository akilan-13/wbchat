<script>
function get_bank_details_from_comp() {
    get_insurance_details();
    var company_id = $('#company_id').val();
	// alert(company_id)
    $.ajax({
        type: "POST",
        url: baseurl + 'VoucherAccounts/get_bank_details_from_comp',
        async: false,
        data: "company_id=" + company_id,
        dataType: "html",
        success: function(response) {

            $('#bank_details_id').empty().append(response);
            $('#eefc_bank_details_id').empty().append(response);
            $('.m_selectpicker').selectpicker('refresh');
            // window.location.href = baseurl+'Ledger_heads';
        }
    });

    $.ajax({
        type: "POST",
        url: baseurl + 'VoucherAccounts/get_ledger_details_from_comp',
        async: false,
        data: "company_id=" + company_id,
        dataType: "html",
        success: function(response) {

            // console.log(response);
            $('#ledger_head_id').empty().append(response);
            $('.m_selectpicker').selectpicker('refresh');
            // window.location.href = baseurl+'Ledger_heads';
        }
    });

    $.ajax({
        type: "POST",
        url: baseurl + 'VoucherAccounts/get_internal_loan_from_comp',
        async: false,
        data: "company_id=" + company_id,
        dataType: "html",
        success: function(response) {

            // console.log(response);
            $('#internal_loan_id').empty().append(response);
            $('.m_selectpicker').selectpicker('refresh');
            // window.location.href = baseurl+'Ledger_heads';
        }
    });

	$.ajax({
        type: "POST",
        url: baseurl + 'VoucherAccounts/get_buyer_details_by_comp_id',
        async: false,
        data: "company_id=" + company_id,
        dataType: "html",
        success: function(response) {

            // console.log(response);
            $('#buyer_order_id').empty().append(response);
            $('.m_selectpicker').selectpicker('refresh');
           
        }
    });

	// $.ajax({
    //     type: "POST",
    //     url: baseurl + 'VoucherAccounts/get_buyer_order_by_comp_id',
    //     async: false,
    //     data: "company_id=" + company_id,
    //     dataType: "html",
    //     success: function(response) {
	// 		console.log(response)
    //         $('#buyer_order_id').empty().append(response);
    //         $('.m_selectpicker').selectpicker('refresh');
    //         // window.location.href = baseurl+'Ledger_heads';
    //     }
    // });
}

function get_bank_details_from_bnkid() {
    var bank_id = $('#bank_details_id').val();
    get_fd_details_by_comp_bank();
    $.ajax({
        type: "POST",
        url: baseurl + 'VoucherAccounts/get_bank_details_from_bnkid',
        async: false,
        data: "bank_details_id=" + bank_id,
        dataType: "html",
        success: function(response) {
            if (response == 'credit') {
                // $('#credit').append(response);
                $("#credit").prop("checked", true);
            } else {
                // $('#debit').append(response);
                $("#debit").prop("checked", true);
            }
			get_eefc_details_by_comp_bank();
            //   $('.m_selectpicker').selectpicker('refresh');
            // window.location.href = baseurl+'Ledger_heads';
        }
    });

}

function get_invoice_details() {
    var buyer_order_id = $('#buyer_order_id').val();
    $.ajax({
        type: "POST",
        url: baseurl + 'VoucherAccounts/get_invoice_details',
        async: false,
        data: "buyer_order_id=" + buyer_order_id,
        dataType: "json",
        success: function(response) {
            // alert();
            $('#invoice_no').val(response.length > 0 ? response[0].invoice_no : " ");
            $('#invoice_id').val(response.length > 0 ? response[0].invoice_id : " ");
            //   $('#buyer_amount').val(response.length > 0 ? response[0].balance_amount : 0);
            $('#balance_amount').val(response.length > 0 ? response[0].balance_amount : 0);

            lbl = response[0].currency_code;
            conv_lbl = '(In ' + lbl + ')';
            $('#buyer_bal_lbl').text('Balance Amount ' + conv_lbl);

           
            //   conv_lbl='(In'+lbl+')';
            //   $('#buyer_bal_lbl').val(conv_lbl);
            $('#buyer_conv_rate').val(response[0].rate);
            //   $('.m_selectpicker').selectpicker('refresh');
            // window.location.href = baseurl+'Ledger_heads';
        }
    });
}

function get_delivery_invoice_details() {
    var buyer_order_id = $('#buyer_order_id').val();
    $.ajax({
        type: "POST",
        url: baseurl + 'VoucherAccounts/get_delivery_invoice_details',
        async: false,
        data: "buyer_order_id=" + buyer_order_id,
        dataType: "html",
        success: function(response) {
            // alert(response);
            $('#di_block').css('display', 'block');
            $('#delivery_invoice_id').empty().append(response);
            $('.m_selectpicker').selectpicker('refresh');
        }
    });
}

function get_fc_details() {
    var fc_id = $('#fc_id').val();
    $.ajax({
        type: "POST",
        url: baseurl + 'VoucherAccounts/get_fc_details',
        async: false,
        data: "fc_id=" + fc_id,
        dataType: "json",
        success: function(response) {
            $('#fc_rate_lbl').html(response.rate_per_usd);
            $('#fc_balance').html(response.balance_amount > 0 ? response.balance_amount : 0).toFixed(2);


            //   $('.m_selectpicker').selectpicker('refresh');
            // window.location.href = baseurl+'Ledger_heads';
        }
    });
}

function get_fc_details_popup(fc_id, id) {
    // var fc_id=$('#fc_id').val();
    $.ajax({
        type: "POST",
        url: baseurl + 'VoucherAccounts/get_fc_details',
        async: false,
        data: "fc_id=" + fc_id,
        dataType: "json",
        success: function(response) {

            $('#fccurrency_symbol_' + id).html(response.currency_code);
            $('#fccurrency_symbol_lbl_' + id).html(response.currency_code);
            $('#fccurrency_symbol_amt_' + id).html(response.currency_code);
            $('#fccurrency_symbol_rt_' + id).html(response.currency_code);
            $('#fc_rate_lbl_' + id).html(response.rate_per_usd);
            $('#fc_balance_' + id).html(response.balance_amount);
            $('#fc_rate_' + id).val(response.rate_per_usd);




            //   $('.m_selectpicker').selectpicker('refresh');
            // window.location.href = baseurl+'Ledger_heads';
        }
    });
}
