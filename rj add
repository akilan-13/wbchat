<script>
function add_more_pcfc_details_popup() {
    var cp_inc = $('#pcfc_details_append_block_count').val();
    $('#pcfc_box_popup').append();

    cp_inc = Number(cp_inc) + 1;
    $('#pcfc_details_append_block_count').val(cp_inc);
    $('#pcfc_box_popup').append('<div class="row mt-2 pcfc_' + cp_inc + '" id="pcfc_' + cp_inc +
        '"><div class="col-lg-2"><div class="form-group m-form__group"><label>PCFC<span class="text-danger">*</span></label><select class="form-control m-bootstrap-select m_selectpicker" data-live-search="true" name="new_pcfc_id[]" id="pcfc_id_' +
        cp_inc + '" onchange="get_pcfc_details_popup(this.value,' + cp_inc +
        ');"><option value="">Choose PCFC</option><?php foreach ($pcfc_list as $pcfclist) {?><option value="<?php echo $pcfclist['pcfc_id']; ?>"><?php echo $pcfclist['pcfc_no']; ?></option><?php }?></select><span class="text-danger" id="pcfc_id_err_' +
        cp_inc +
        '"></span></div></div><div class="col-lg-2 mt-4"><div class="row"><label class="col-lg-6">Balance(<span id="pcfccurrency_symbol_' +
        cp_inc + '"></span>)&nbsp;: </label><p class="col-lg-6"><label class="text-theme"id="pcfc_balance_' +
        cp_inc +
        '" name="pcfc_balance[]">0.00</label></p></div><div class="row"><label class="col-lg-6">Per <span id="pcfccurrency_lbl_symbol_' +
        cp_inc + '"></span>&nbsp;: </label><p class="col-lg-6"><label id="pcfc_rate_lbl_' + cp_inc +
        '" class="text-theme">0.00</label></p></div></div><div class="col-lg-2"><div class="form-group m-form__group"><label>Amount to Process(In <span id="pcfccurrency_amt_symbol_' +
        cp_inc +
        '"></span>)<span class="text-danger">*</span></label><input type="hidden" class="form-control m-input m-input--square" name="final_pcfc_id[]" id="final_pcfc_id_' +
        cp_inc +
        '"><input type="text" class="form-control m-input m-input--square" placeholder="Enter Amount" name="pcfc_amount_usd[]" id="pcfc_amount_usd_' +
        cp_inc + '" maxlength="60" autocomplete="off" onkeyup="getAmountInINR_popup(this.value,' + cp_inc +
        ');" value="0" onfocus="this.select();"><span class="text-danger" id="pcfc_amount_usd_err_' + cp_inc +
        '"></span></div></div><div class="col-lg-2"><div class="form-group m-form__group"><label>Rate Per <span id="pcfccurrency_rt_symbol_' +
        cp_inc +
        '"></span><span class="text-danger">*</span></label><input type="text" class="form-control m-input m-input--square" placeholder="Enter Rate Per USD" name="pcfc_rate[]" id="pcfc_rate_' +
        cp_inc + '" maxlength="60" autocomplete="off" onkeyup="getAmountInINR_popup(this.value,' + cp_inc +
        ');" value="0" onfocus="this.select();"><span class="text-danger" id="pcfc_rate_err_' + cp_inc +
        '"></span></div></div><div class="col-lg-2"><div class="form-group m-form__group"><label>Amount(In INR)<span class="text-danger">*</span></label><input type="text" class="form-control m-input m-input--square" placeholder="Enter Amount(In INR)" name="pcfc_amount_inr[]" id="pcfc_amount_inr_' +
        cp_inc + '" maxlength="60" autocomplete="off"><span class="text-danger" id="pcfc_amount_inr_err_' + cp_inc +
